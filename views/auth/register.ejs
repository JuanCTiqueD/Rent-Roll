<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/registro.css">
    <title>Rent&Roll - Registro</title>
</head>
<body>
    <div class="col-md-6 form-container">
        <div class="form-box">
            <div class="form-content">
                <h1>Rent & Roll</h1>
                <p class="subtitle">_______Ingresa tus datos para el registro_______</p>

                <!-- Mensaje de alerta -->
                <div id="alert-message" class="alert d-none"></div>

                <form action="/auth/register" method="post">
                    <label for="nombre">Ingrese su nombre completo:</label>
                    <input type="text" name="nombre" id="nombre" required>
                    
                    <label for="correo">Ingrese su correo:</label>
                    <input type="email" name="correo" id="correo" required>
                    
                    <label for="contrasena">Ingrese su contraseña:</label>
                    <input type="password" name="contrasena" id="contrasena" required>
                    
                    <button class="btn-registro" type="submit">Registro</button>
                    <a href="/" class="btn-cancel">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6 image-container"></div>

    <script>
        // Captura mensajes de éxito o error desde la URL
        const params = new URLSearchParams(window.location.search);
        const errorMessage = params.get('error');
        const successMessage = params.get('success');

        if (errorMessage) {
            const alertBox = document.getElementById('alert-message');
            alertBox.classList.remove('d-none', 'alert-success');
            alertBox.classList.add('alert-danger');
            alertBox.innerText = errorMessage;
        }

        if (successMessage) {
            const alertBox = document.getElementById('alert-message');
            alertBox.classList.remove('d-none', 'alert-danger');
            alertBox.classList.add('alert-success');
            alertBox.innerText = successMessage;
        }
    </script>
</body>
</html>
