<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/compra.css">
    <title>Rent&Roll</title>
</head>
<body>
    <% if (vehiculo) { %>

    <!-- Contenedor principal -->
    <div class="container">
        <div class="row justify-content-center">
            <!-- Card con los detalles del vehículo -->
            <div class="col-md-6 car-card">
                <div class="card">
                    <h2 class="titulo"><%= vehiculo.marca %></h2>
                    <!-- Imagen del carro -->
                    <img src="<%= vehiculo.imagenBase64 %>" alt="Imagen de <%= vehiculo.marca %>" class="w-100">
                    <div class="card-body">
                        <form action="/reserva" method="post">
                            <input type="text" name="id_vehiculo" id="id_vehiculo" value="<%= vehiculo.id_vehiculo %>" hidden>
                            <input type="text" name="estado" id="estado" value="reservado" hidden>

                            <h5 class="card-title"><%= vehiculo.modelo %></h5>
                            <p class="card-text"><strong>Año:</strong> <%= vehiculo.año %></p>
                            <p class="card-text"><strong>Precio por día:</strong> $ <i id="precio"><%= vehiculo.precio_dia %></i></p>

                            <div class="form-group">
                                <label for="fecha">Selecciona la fecha de retirada:</label>
                                <input type="date" name="fechaRetirada" id="fechaRetirada" class="form-control">
                            </div>

                            <div class="form-group">
                                <label for="fecha">Selecciona la fecha de devolución:</label>
                                <input type="date" name="fechaDevolusión" id="fechaDevolusión" class="form-control">
                            </div>
                            <div class="text-center" id="tarifaCarro">
                                <a class="btn btn-primary" id="botonTarifa" onclick="calcularTarifa()">Calcular Tarifa</a>

                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-success btn-custom">Comprar</button>
                                <a href="/vehiculos" class="btn btn-danger btn-custom">Cancelar</a>
                            </div>
                        </form> 
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>
    <script>
        function calcularTarifa(){
            const fechaIn = document.getElementById('fechaRetirada').value;
            const fechaOut= document.getElementById('fechaDevolusión').value;
            const precio= document.getElementById('precio').innerText;
            
            if(fechaIn && fechaOut){
                const date1 = new Date(fechaIn);
                const date2 = new Date(fechaOut);

                const day1 = date1.getDate();
                const day2 = date2.getDate();

                let dias = Number(day2)-Number(day1)+1;
                console.log(dias);
                console.log(precio);
                let tarifatotal = dias *Number(precio);
                console.log(tarifatotal)
                const referencia = document.getElementById('botonTarifa'); // Elemento existente
                const nuevoElemento = document.createElement('p');
                nuevoElemento.textContent = `La tarifa por ${dias} dias es: `+String(tarifatotal);
                referencia.insertAdjacentElement('afterend', nuevoElemento);

            }
        }
    </script>
</body>
</html>